<!-- views/reviews/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Reviews</title>
  <style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    text-align: center;
    background-image: url('https://thumbs.dreamstime.com/b/salad-tomatoes-greens-dressing-oil-feta-cheese-blue-plate-white-wooden-background-top-view-banner-website-52717635.jpg');  /* Background image */
  background-size: cover;
  }
  h1 {
    color: #333;
  }
  a {
    display: inline-block;
    margin-bottom: 10px;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }
  a:hover {
    background-color: #0056b3;
  }
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0 auto;
    max-width: 500px;
  }
  li {
    background-color: #fff;
    margin-bottom: 10px;
    padding: 15px;
    border-radius: 4px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    text-align: left;
  }
  strong {
    display: block;
    color: #333;
  }
  button {
    background-color: #d9534f;
    border: none;
    color: white;
    padding: 5px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin-left: 10px;
    cursor: pointer;
    border-radius: 4px;
  }
  button:hover {
    background-color: #c9302c;
  }
  form {
    display: inline;
  }
</style>
</head>
<body>
  <h1>Reviews</h1>
  <a href="/reviews/new">Add New Review</a>
  <ul>
    <% reviews.forEach(review => { %>
      <li>
        <strong>Rating:</strong> <%= review.rating %> 
        <strong>Comment:</strong> <%= review.comment %> 
        <strong>Date:</strong> <%= review.review_date.toDateString() %> 
        <a href="/reviews/<%= review._id %>/edit">Edit</a>
        <form action="/reviews/<%= review._id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
